<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgAnterior"
        android:layout_width="79dp"
        android:layout_height="101dp"
        android:layout_centerHorizontal="true"
         />

    <ImageView
        android:id="@+id/imgCarta"
        android:layout_width="249dp"
        android:layout_height="345dp"
        android:layout_below="@+id/imgAnterior"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/trasera"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCarta"
        android:layout_marginTop="5dp"
        android:text="Iniciar Juego"
        android:id="@+id/btnIniciar"
        android:paddingVertical="13dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIniciar"
        android:text="Â¡Buenas!"
        android:paddingVertical="13dp"
        android:id="@+id/btnBuenas"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBuenas"
        android:text="Verificar carta"
        android:paddingVertical="13dp"
        android:id="@+id/btnVerificar"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnVerificar"
        android:text="Reiniciar juego"
        android:paddingVertical="13dp"
        android:id="@+id/btnReiniciar"
        />

</RelativeLayout>